<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/spacing_large">

    <ImageView
        android:id="@+id/ivArtwork"
        android:layout_width="@dimen/weather_icon_medium"
        android:layout_height="@dimen/weather_icon_medium"
        android:contentDescription="@string/music_title" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="@dimen/spacing_small"
        android:paddingEnd="@dimen/spacing_small">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/weather_text_primary"
            android:textColor="@color/on_dark" />

        <TextView
            android:id="@+id/tvArtist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/weather_text_secondary"
            android:textColor="@color/on_dark" />
    </LinearLayout>

    <Button
        android:id="@+id/btnFavorite"
        android:layout_width="@dimen/music_favorite_button_size"
        android:layout_height="@dimen/music_favorite_button_size"
        android:backgroundTint="@color/spotify_green"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:padding="0dp"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="+"
        android:textColor="@color/on_dark"
        android:textSize="@dimen/music_favorite_text_size"
        android:textStyle="bold" />
</LinearLayout>
